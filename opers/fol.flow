                v = flow2s(args[0].eval(vals, conf));
                a = cast(args[1].eval(vals, conf) : flow -> [flow]);
                sublists = map(enumFromTo(0, length(a)), \l -> subrange(a, 0, l));
                flow(quant(
                    sublists,
                    \sl -> flow2b(args[2].eval(setTree(vals, v, sl), conf))
