    EvalOper(Q,
        funcAlgType([AlgTypeVar("T"), arrayAlgType(AlgTypeVar("T")), boolType] , boolType),
        \args -> Eval(\vals, conf -> 
            if (length(args) != 3) {
                flow(undefVal)
